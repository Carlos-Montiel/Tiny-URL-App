<h1>Shorten Urls</h1>

<table>
  <thead>
    <tr>
      <th>Long Url</th>
      <th>Description</th>
      <th>Token</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shorten_urls.each do |shorten_url| %>
      <tr>
        <td><%= shorten_url.long_url %></td>
        <td><%= shorten_url.description %></td>
        <td><%= shorten_url.short_token %></td>
        <td><%= link_to 'Visit', shorten_url %></td>
        <td><%= link_to 'Show', shorten_url %></td>
        <td><%= link_to 'Destroy', shorten_url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
